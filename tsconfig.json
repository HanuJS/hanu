{
  "compilerOptions": {
    "allowJs": true,
    "allowSyntheticDefaultImports": true,
    "experimentalDecorators": true,
    "jsx": "preserve",
    "lib": ["es5", "es6", "dom"],
    "module": "es6",
    // "moduleResolution": "node",
    "noImplicitAny": true,
    "noUnusedLocals": false,
    "noUnusedParameters": false,
    "outDir": "./dist/",
    "sourceMap": true,
    "target": "es6",
    "typeRoots": ["node_modules/@types", "typings"]
  },
  "include": [
    "src/**/*.ts",
    "src/**/*.tsx"
  ],
}
